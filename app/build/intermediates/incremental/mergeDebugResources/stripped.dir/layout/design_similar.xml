<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                        
                                                      

                 
                                
                                                                                   
           

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_margin="5dp"
        android:tag="layout/design_similar_0"                  
        app:cardCornerRadius="5dp"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/movie">

            <ImageView
                android:id="@+id/movieImg"
                android:tag="binding_1"        
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/rateIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movieImg"
                android:src="@drawable/star_icon" />

            <TextView
                android:id="@+id/rateTxt"
                android:tag="binding_2"            
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movieImg"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/rateIcon"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/movieNameTxt"
                android:tag="binding_3"  
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rateIcon"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
         